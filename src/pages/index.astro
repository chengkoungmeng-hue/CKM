<Layout title="ចុងភៅ ចេង គួងម៉េង | CKM Catering Service" description="CKM Catering Service">
  
  <nav class="fixed w-full z-50 p-4 bg-black/70 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="flex items-center gap-3">
        <img src={logo} alt="CKM Logo" class="h-12 w-12 rounded-full border-2 border-white shadow-lg">
        <span class="text-white font-bold text-xl font-heading">CKM CATERING</span>
      </div>
      <a href="#contact" class="hidden md:inline-block bg-primary hover:bg-red-800 text-white px-6 py-2 rounded-full font-bold transition-transform hover:scale-105 shadow-lg text-sm">Contact</a>
    </div>
  </nav>

  <header class="relative h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${heroImage}'); background-attachment: fixed;`}></div>
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 text-center px-6 max-w-4xl mx-auto text-white">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 font-heading">រសជាតិដែលអ្នក<br/><span class="text-primary">មិនអាចបំភ្លេចបាន</span></h1>
      <div class="flex flex-col md:flex-row gap-4 justify-center mt-8">
        <a href="https://t.me/CKMSam06" target="_blank" class="bg-white text-blue-500 px-8 py-3 rounded-full font-bold">Telegram</a>
        <a href="#contact" class="bg-primary text-white px-8 py-3 rounded-full font-bold">Contact Us</a>
      </div>
    </div>
  </header>

  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12 font-heading">Our Gallery</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {galleryImages.map((img) => (
          <div class="rounded-xl overflow-hidden aspect-[4/3]">
            <img src={img} class="w-full h-full object-cover hover:scale-110 transition duration-500" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="contact" class="py-24 bg-gray-900 text-white text-center">
    <div class="max-w-5xl mx-auto px-6">
      <h2 class="text-4xl font-bold mb-12 font-heading">Contact Us</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-xl font-bold">
        <a href="tel:+85511827782" class="block p-6 bg-white/10 rounded-xl hover:bg-primary transition">011 827 782</a>
        <a href="tel:+85512977696" class="block p-6 bg-white/10 rounded-xl hover:bg-primary transition">012 977 696</a>
        <a href="tel:+85515977696" class="block p-6 bg-white/10 rounded-xl hover:bg-primary transition">015 977 696</a>
      </div>
    </div>
  </section>
</Layout>
