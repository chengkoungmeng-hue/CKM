---
// ✅ 1. 本地 FontAwesome
import '@fortawesome/fontawesome-free/css/all.min.css';

// ✅ 2. 接收頁面傳來的參數 (新增 image)
const { title, description, image } = Astro.props;

// ✅ 3. 強制指定網域
const SITE = "https://ckmkh.com";

const canonicalURL = new URL(Astro.url.pathname, SITE);

// ✅ 4. 智慧圖片邏輯：如果有傳 image 進來就用，沒有就用預設的 open-graph.png
const ogImageURL = image 
    ? new URL(image, SITE) 
    : new URL("/open-graph.png", SITE);
---

<!doctype html>
<html lang="km" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Koulen&family=Noto+Sans+Khmer:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<script async src="https://www.googletagmanager.com/gtag/js?id=G-EG6D0H2T5K"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-EG6D0H2T5K');
		</script>

		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:site_name" content="CKM Catering Service" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageURL} />
		
		<script type="application/ld+json" is:inline define:vars={{ SITE }}>
			{
			  "@context": "https://schema.org",
			  "@type": "Organization",
			  "url": SITE,
			  "logo": SITE + "/favicon.svg"
			}
		</script>
	</head>
	<body class="bg-dark text-gray-100 font-body antialiased selection:bg-gold selection:text-black">
		<slot />
	</body>
</html>

<style is:global>
	/* 定義字體變數 */
	:root {
		--font-khmer-display: 'Koulen', cursive;
		--font-khmer-body: 'Noto Sans Khmer', sans-serif;
	}
	
	/* 標題字體設定 (使用 Koulen) */
	h1, h2, h3, h4, h5, h6, .font-heading {
		font-family: var(--font-khmer-display), system-ui, sans-serif;
		letter-spacing: 0.05em;
		line-height: 1.4;
	}

	/* 內文字體設定 (使用 Noto Sans Khmer) */
	body, p, span, a, li {
		font-family: var(--font-khmer-body), system-ui, sans-serif;
	}

	/* 中文/英文輔助字體 */
	.font-chinese {
		font-family: system-ui, "Microsoft YaHei", sans-serif;
	}

	/* 捲軸美化 */
	::-webkit-scrollbar { width: 10px; }
	::-webkit-scrollbar-track { background: #1e293b; }
	::-webkit-scrollbar-thumb { background: #d97706; border-radius: 5px; }
	::-webkit-scrollbar-thumb:hover { background: #b45309; }
</style>
